<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nightpatrol">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/vinnies_round_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/vinnies_round_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ContactUs"
            android:label="@string/title_activity_contact_us"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".AvailabilityScreen"
            android:label="@string/title_activity_availability_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LandingScreen"
            android:label="@string/title_activity_landing_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>